@import "../../../style/skin.wxss";

.list {
	width: 100%;
	box-sizing: border-box;
	padding: 20rpx 20rpx 30rpx 20rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	overflow: hidden;
}

.list .item {
	padding: 22rpx 22rpx;
	display: flex;
	border-radius: 10rpx;
	margin-bottom: 20rpx;
	position: relative;
	background-color: #fff;
	overflow: hidden;
}

.list .item .left {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.list .item .left .line1 {
	width: 100%;
	display: flex;
	flex-direction: column;
}

.list .item .left .line1 .title {
	font-size: 28rpx;
	color: #000; 
}

.list .item .left .line2 {
	width: 100%;
	font-size: 24rpx;
	color: #bbb;
	text-align: left;
	font-weight: normal;
	padding: 16rpx 0;
}

.list .item .left .line2>text {
	margin-right: 20rpx;
}

.list .item .left .line3 {
	padding: 10rpx 0;
	display: flex;
	align-items: center;
	justify-content: flex-end;
	margin-top:10rpx;
}

.list .item .left .line3>view {
	padding: 8rpx 30rpx;
	background-color: #f2f2f2;
	font-size: 24rpx;
	margin-right: 20rpx;
	border-radius: 10rpx;
	display: flex;
	align-items: center;
}