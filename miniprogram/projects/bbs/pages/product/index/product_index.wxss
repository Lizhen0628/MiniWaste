@import "../../../style/skin.wxss";

.cate-list {
	width: 100%;
	display: flex;
	align-items: center;
	padding: 20rpx 20rpx 0;
	flex-wrap: wrap;
	justify-content: flex-start;
}

.cate-list .item {
	padding: 10rpx 20rpx;
	background-color: #fff;
	font-size: 24rpx;
	border-radius: 6rpx;
	margin-right: 14rpx;
	margin-bottom: 14rpx;
}

.cate-list .item.cur {
	color: #fff;
	background-color: var(--projectColor);
}



.list {
	width: 100%;
	box-sizing: border-box;
	padding: 20rpx 20rpx 30rpx 20rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	overflow: hidden;
}

.list .item {
	padding: 22rpx 22rpx;
	display: flex;
	border-radius: 10rpx;
	margin-bottom: 20rpx;
	position: relative;
	background-color: #fff;
	overflow: hidden;
	min-height: 150rpx;
}

.list .item .left {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.list .item .left .author {
	width: 100%;
	display: flex;
	align-items: center;
	padding: 14rpx 0;
	font-family: 'din';
}

.list .item .left .author>image {
	width: 30rpx;
	height: 30rpx;
	border-radius: 50%;
	margin-right: 4rpx;
}

.list .item .left .author .txt {
	font-size: 24rpx;
	color: #999;
}

.list .item .left .author .time {
	font-size: 22rpx;
	color: #ccc;
	margin-left: 10rpx;
}

.list .item .left .line1 {
	width: 100%;
	display: flex;
	flex-direction: column;
}

.list .item .left .pic-line {
	width: 100%;
	display: flex;
}

.list .item .left .pic-line image {
	width: calc((100% - 20rpx) / 3);
	height: 130rpx;
	border-radius: 6rpx; 
	margin: 10rpx 0;
}

.list .item .left .pic-line image:nth-child(2) {
	margin-right: 10rpx;
	margin-left: 10rpx;
}

.list .item .left .line1 .title {
	font-size: 28rpx;
	color: #000;
}

.list .item .left .line1 .title .top {
	font-size: 22rpx;
	padding: 6rpx 10rpx;
	border-radius: 4rpx;
	margin-right: 8rpx;
	background-color: #66A3FF;
	color: #fff;
}

.list .item .left .line1 .title .good {
	font-size: 22rpx;
	padding: 6rpx 10rpx;
	border-radius: 4rpx;
	margin-right: 8rpx;
	background-color: #FF6666;
	color: #fff;
}

.list .item .left .line2 {
	width: 100%;
	font-size: 22rpx;
	color: #bbb;
	text-align: left;
	font-family: "din";
	font-weight: normal;
}

.list .item .left .line2>text {
	margin-right: 20rpx;
}

.list .item .right {
	width: 190rpx;
	height: 124rpx;
	border-radius: 6rpx;
	margin-left: 20rpx;
	position: relative;
}

.list .item .right>image {
	width: inherit;
	height: inherit;
	border-radius: inherit;
}

.fixed-home-btn {
	position: fixed;
	bottom: 180rpx;
	left: 10rpx;
	font-size: 45rpx;
	height: 80rpx;
	width: 80rpx;
	background-color: rgba(0, 0, 0, 0.2);
	border-radius: 50%;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	color: #fff;
	z-index: 99999;
}